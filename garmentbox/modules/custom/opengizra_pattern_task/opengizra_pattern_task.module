<?php
/**
 * @file
 * Code for the Opengizra Pattern Task feature.
 */

include_once 'opengizra_pattern_task.features.inc';

/**
 * Implements hook_node_presave().
 *
 * Populate the Season reference field based on the selected entity.
 */
function opengizra_pattern_task_node_presave($node) {
  if ($node->type != 'pattern_task') {
    return;
  }

  $wrapper = entity_metadata_wrapper('node', $node);
  $nids = array_keys(opengizra_general_get_node_hierarchy($node));
  $wrapper->field_reference_hierarchy->set($nids);
}
